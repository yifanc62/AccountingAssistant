<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="394dp"
        android:layout_height="88dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="0dp"
        android:stretchColumns="1"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/bankcardname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="账户名称"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/account_id"
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:hint="请填写卡号或账号或编号"
                android:selectAllOnFocus="true"
                tools:layout_editor_absoluteX="74dp"
                tools:layout_editor_absoluteY="113dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--<TextView-->
                <!--android:id="@+id/bankcardnumber"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="输入卡号"-->
                <!--android:textSize="16sp" />-->

            <!--<EditText-->
                <!--android:id="@+id/inbankcardnumber"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:hint="请填写卡号/支付宝账号"-->
                <!--android:inputType="textPersonName" />-->

        </TableRow>

    </TableLayout>

    <TableRow
        android:layout_width="240dp"
        android:layout_height="57dp"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/tableRow">

        <Button
            android:id="@+id/newBankCard_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="createAccount"
            android:text="确认"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="96dp" />
    </TableRow>

    <Spinner
        android:id="@+id/spinner_type"
        android:layout_width="139dp"
        android:layout_height="26dp"
        app:layout_constraintTop_toTopOf="@+id/tableLayout"
        android:layout_marginTop="49dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账户类型"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="1dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="49dp" />

</android.support.constraint.ConstraintLayout>
